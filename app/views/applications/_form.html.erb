<%= form_with url: path, method: method do |form| %>
  <p>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </p>
  <p>
    <%= form.label :street %>
    <%= form.text_field :street %>
  </p>
  <p>
    <%= form.label :city %>
    <%= form.text_field :city %>
  </p>
  <p>
    <%= form.label :state %>
    <%= form.text_field :state %>
  </p>
  <p>
    <%= form.label :zip %>
    <%= form.text_field :zip %>
  </p>
  <%= form.submit button_text %>
<% end %>
